@model Filtration.ViewModels.ExceptionHandlerViewModel


@{
    ViewBag.Title = "ExceptionHandler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-header">
    <h2>О чудо!</h2>
    <p class="h3">Вы автоматически перехватили исключение @Model.Name</p>
</section>

<section>
    <h4>Cообщение</h4>
    <p>@Model.Message</p>
    <hr />
</section>

<section>
    <h4>Стек</h4>
    <p>@Model.StackTrace</p>
</section>

